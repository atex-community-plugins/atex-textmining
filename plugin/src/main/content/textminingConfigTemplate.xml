<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <!--This file contains input template definitions -->
  <input-template name="com.atex.plugins.textmining.google.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.google.textMiningConfigTemplate.fields">
    <field name="apiJson" input-template="p.TextInput" label="com.atex.plugins.textmining.google.apiJson" required="true"/>
    <layout name="mappings" input-template="p.HorizontalGroup" label="">
      <field name="topicMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.google.topicMappings"/>
      <field name="entityMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.google.entityMappings"/>
    </layout>
  </input-template>
  <input-template name="com.atex.plugins.textmining.calais.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.calais.textMiningConfigTemplate.fields">
    <field name="apiKey" input-template="p.TextInput" label="com.atex.plugins.textmining.calais.key" required="true"/>
    <layout name="mappings" input-template="p.HorizontalGroup" label="">
      <field name="topicMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.calais.topicMappings"/>
      <field name="entityMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.calais.entityMappings"/>
    </layout>
  </input-template>
  <input-template name="com.atex.plugins.textmining.extraggo.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.extraggo.textMiningConfigTemplate.fields">
    <field name="apiKey" input-template="p.TextInput" label="com.atex.plugins.textmining.extraggo.key" required="true"/>
    <layout name="mappings" input-template="p.HorizontalGroup" label="">
      <field name="topicMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.extraggo.topicMappings"/>
      <field name="entityMapping" input-template="p.PropertyEditor" label="com.atex.plugins.textmining.extraggo.entityMappings"/>
    </layout>
  </input-template>

  <input-template name="com.atex.plugins.textmining.textMiningConfigTemplate" label="com.atex.plugins.textmining.textMiningConfigTemplate">

    <policy>com.atex.plugins.textmining.TextMiningConfigPolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>

    <type>AppConfig</type>
    <param name="ViewState_insert">false</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">true</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="renderTemplateIconInSelect">true</param>
    <layout name="menu" input-template="p.PageMenu">
      <layout name="general" input-template="p.Page" label="cm.general.General">
        <field name="name" input-template="p.ContentName" label="cm.label.Name" required="true"/>
        <field name="dimensionName" input-template="p.TextInput" label="com.atex.plugins.textmining.calais.dimensionName" required="true"/>
        <field name="dimensionId" input-template="p.TextInput" label="com.atex.plugins.textmining.calais.dimensionId" required="false"/>

        <field name="provider" input-template="p.SelectableSubField" label="com.atex.plugins.textmining.textMiningProvider">
          <param name="inlineHelp">true</param>
          <field name="calais" input-template="com.atex.plugins.textmining.calais.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.calais.textMiningConfigTemplate.fields"/>
          <field name="google" input-template="com.atex.plugins.textmining.google.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.google.textMiningConfigTemplate.fields"/>
          <field name="extraggo" input-template="com.atex.plugins.textmining.extraggo.textMiningConfigTemplate.fields" label="com.atex.plugins.textmining.extraggo.textMiningConfigTemplate.fields"/>
        </field>
      </layout>
    </layout>

  </input-template>
</template-definition>