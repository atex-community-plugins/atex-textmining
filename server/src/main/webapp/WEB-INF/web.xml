<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Textmining</display-name>

  <context-param>
    <param-name>p.applicationName</param-name>
    <param-value>textmining</param-value>
  </context-param>

  <listener>
    <listener-class>com.atex.plugins.textmining.TextminingServletContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>textmining</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.atex.onecms.ws.common,com.atex.plugins.textmining.api</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
      <param-value>true</param-value>
    </init-param>
  </servlet>

    <servlet-mapping>
        <servlet-name>textmining</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

</web-app>
